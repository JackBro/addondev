<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="org.addondev.builder" name="builder" schema="schema/org.addondev.builder.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="jp.javascript.debug"
            name="JavaScriptDev">
      </category>
      <view
            class="org.addondev.debug.ui.PseudoSplitView"
            id="org.addondev.debug.ui.PseudoSplitView"
            name="name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.addondev.ui.preferences.AddonDevPreferencePage"
            id="org.addondev.ui.preferencepages"
            name="AddonDev">
      </page>
   </extension>
   <extension
         id="org.addondev.debug.marktype.linebreakpoint"
         name="AddonDev Line BreakPointMarker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/addondev_nature.png"
            id="org.addondev.nature.image"
            natureId="org.addondev.nature">
      </image>
   </extension>
   <extension
         id="org.addondev.nature"
         name="AddonDevNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.addondev.core.AddonDevNature">
         </run>
      </runtime>
      <builder
            id="org.addondev.core.AddonIncrementalProjectBuilder">
      </builder>
   </extension>
   <extension
         id="org.addondev.core.AddonIncrementalProjectBuilder"
         name="checkfile"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.addondev.builder.AddonIncrementalProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.addondev.preferences.AddonDevPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            class="org.addondev.debug.ui.propertypages.AddonDevBreakPointPropertyPage"
            id="org.addondev.debug.ui.propertypages.AddonDevBreakPointPropertyPage"
            name="breakpoint"
            objectClass="org.addondev.debug.core.model.AddonDevLineBreakpoint">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.addondev.ui.propertypage.AddonDevPropertyPage"
            id="org.addondev.ui.AddonDevPropertyPage"
            name="name">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>

</plugin>
