<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.addondev.ui.editor.javascript.texthover" name="javascript.texthover" schema="schema/org.addondev.ui.editor.javascript.texthover.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.addondev.ui.editor.javascript.JavaScriptEditor"
            default="false"
            extensions="js"
            icon="icons/editor_js.png"
            id="org.addondev.ui.editor.javascript"
            name="JavaScript">
      </editor>
      <editor
            class="org.addondev.ui.editor.xulmultipageeditor.XULMultiPageEditor"
            default="false"
            extensions="xul"
            icon="icons/editor_xul.png"
            id="org.addondev.ui.editor.xulmultipageeditor.XULMultiPageEditor"
            name="XUL">
      </editor>
      <editor
            class="org.addondev.ui.editor.xml.XMLEditor"
            default="false"
            extensions="xml"
            icon="icons/editor_xml.png"
            id="org.addondev.ui.editor.xml"
            name="XML">
      </editor>
      <editor
            class="org.addondev.ui.editor.manifest.ManifestFormEditor"
            default="false"
            id="org.addondev.ui.editor.manifest"
            name="Manifest">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="org.addondev.ui.SelectLineRulerActions"
            targetID="org.addondev.ui.editor.javascript">
         <action
               actionID="RulerClick"
               class="org.addondev.ui.actions.SelectLineRulerActionDelegate"
               id="org.addondev.debug.SelectLineRulerAction"
               label="SelectLine">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.addondev.category"
            name="Addon Dev">
      </category>
      <wizard
            category="org.addondev.category"
            class="org.addondev.ui.wizard.AddonDevNewProjectWizard"
            hasPages="true"
            icon="icons/addon.png"
            id="org.addondev.wizzard.addondevwizard"
            name="Project Template"
            project="true">
      </wizard>
      <wizard
            category="org.addondev.category"
            class="org.addondev.ui.wizard.NewJavaScriptFileWizard"
            id="org.addondev.wizard1"
            name="JavaScript File"
            project="false">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            category="org.addondev.ui.wizard.import"
            class="org.addondev.ui.wizard.AddonDevImportWizard"
            id="org.addondev.wizard.addonimportwizard"
            name="Firefox Addon">
      </wizard>
      <category
            id="org.addondev.ui.wizard.import"
            name="Addon Dev">
      </category>
   </extension>
   <extension
         point="org.addondev.builder">
      <new_element
            class="org.addondev.ui.builder.AddonDevBuilder">
      </new_element>
   </extension>
   <extension
         point="org.eclipse.ui.editors.templates">
      <contextType
            class="org.addondev.ui.template.JavaScriptTemplateContextType"
            id="org.addondev.ui.template.javascript"
            name="JavaScript">
      </contextType>
      <include
            file="templates/code/javascript_templates.xml">
      </include>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="AddonDev.category1"
            name="name">
      </category>
      <command
            categoryId="AddonDev.category1"
            id="AddonDev.command1"
            name="name cmd">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.addondev.ui.editor.javascript.actions.ToggleCommentHandler"
            commandId="AddonDev.command1">
      </handler>
      <handler
            class="org.addondev.ui.editor.xulmultipageeditor.actions.RefreshHandler"
            commandId="org.addondev.ui.handler1">
      </handler>
      <handler
            class="org.addondev.ui.editor.xml.action.ToggleCommentHandler"
            commandId="org.addondev.ui.handler1">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="AddonDev.command1"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:edit?after=additions">
         <command
               commandId="AddonDev.command1"
               label="test"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=edit">
         <menu
               label="Source">
            <command
                  commandId="AddonDev.command1"
                  label="Toggle Comment"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.addondev.ui.preferencepages"
            class="org.addondev.ui.preferences.NewProjectPreferencePage"
            id="org.addondev.ui.preferencepages"
            name="Project default">
      </page>
      <page
            category="org.addondev.ui.preferencepages"
            class="org.addondev.ui.WorkbenchPreferencePage1"
            id="org.addondev.ui.preferencepages.editor"
            name="Editor">
      </page>
      <page
            category="org.addondev.ui.preferencepages.editor"
            class="org.addondev.ui.preferences.XULEditorPreferencePage"
            id="org.addondev.ui.XULPreferencepages"
            name="XUL Editor">
      </page>
      <page
            category="org.addondev.ui.preferencepages.editor"
            class="org.addondev.ui.preferences.JavaScriptEditorPreferencePage"
            id="AddonDev.page1"
            name="JavaScript">
      </page>
      <page
            category="org.addondev.ui.preferencepages"
            class="org.addondev.ui.preferences.JavaScriptTemplatePreferencePage"
            id="org.addondev.ui.page1"
            name="name">
      </page>
      <page
            class="org.addondev.ui.WorkbenchPreferencePage1"
            id="org.addondev.ui.page1"
            name="name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.addondev.ui.preferences.AddonDevUIPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.addondev.ui.propertypage.AddonDevPropertyPage"
            id="org.addondev.ui.propertypage.AddonDevPropertyPage"
            name="name">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors.templates">
      <contextType
            class="org.addondev.ui.template.ProjectTemplateContextType"
            id="org.addondev.ui.template.Extension">
      </contextType>
      <include
            file="templates/project/firefox.xml">
      </include>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.addondev.ui.view.TemplateView"
            id="org.addondev.ui.view.TemplateView"
            name="Addon Template"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="org.addondev.ui.specification1"
            colorPreferenceKey="javaScriptOccurrenceIndicationColor"
            colorPreferenceValue="255,0,0"
            contributesToHeader="false"
            highlightPreferenceKey="javaScriptOccurrenceHighlighting"
            highlightPreferenceValue="true"
            includeOnPreferencePage="true"
            isGoToNextNavigationTarget="false"
            isGoToPreviousNavigationTarget="false"
            label="test"
            overviewRulerPreferenceKey="javaScriptOccurrenceIndicationInOverviewRuler"
            overviewRulerPreferenceValue="true"
            presentationLayer="4"
            textPreferenceKey="javaScriptOccurrenceIndication"
            textPreferenceValue="false"
            verticalRulerPreferenceKey="javaScriptOccurrenceIndicationInVerticalRuler"
            verticalRulerPreferenceValue="false">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            name="org.addondev.ui.specification1">
      </type>
   </extension>

</plugin>
