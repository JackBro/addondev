<?xml version="1.0"?>

<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<!DOCTYPE prefwindow SYSTEM "chrome://stacklink/locale/stacklink.dtd" >

<prefwindow id="stacklinkpref" 
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" 
	title="&stacklink.pref;" bottons="accept,cancel">	
	<script type="application/x-javascript" src="chrome://test/content/test.js"/>
	 
	<prefpane id="appearance" label="&pref.appearance;" flex="1">
    <preferences id="stacklinkAppearancePreferences">
		<preference id="extensions.label" name="extensions.label" type="int"/>         		                
    </preferences>    	
    	<groupbox orient="vertical">
            <label value="&pref.panel.size;"/>
    		<grid>
    			<columns>
    				<column/>
    				<column flex="1"/>
    			</columns>
    			<rows>
    				<row align="center" >
    					<label value="&pref.panel.size.maxheight;"/>
    					<textbox id="extensions.panel.size.maxheight-textbox" 
    							 preference="extensions.panel.size.maxheight"/>
    				</row>
    			</rows>
    		</grid>
		</groupbox>
	</prefpane>  
</prefwindow>
