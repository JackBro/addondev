<%= form_for @event, :url => {:action => :update} , :remote => true, :before => "$('#updating_events').show();", :complete => "$('#updating_events').hide();" do |f| %>


<p>
	<%=select_tag('event_startHH',
 		options_for_select([
 			['00',0],['01',1],['02',2],['03',3],['04',4],['05',5],['06',6],['07',7],['08',8],['09',9],['10',10],['11',11],['12',12],['13',13],['14',14],['15',15],['16',16],['17',17],['18',18],['19',19],['20',20],['21',21],['22',22],['23',23]
 		], @event.starttime.hour), 
	) %>
	:
	<%= select_tag('event_startMM',
 		options_for_select([
 			['00',0],['15',15],['30',30],['45',45]
 		], @event.starttime.min), 
	) %>

-

	<%= select_tag('event_endHH',
 		options_for_select([
 			['00',0],['01',1],['02',2],['03',3],['04',4],['05',5],['06',6],['07',7],['08',8],['09',9],['10',10],['11',11],['12',12],['13',13],['14',14],['15',15],['16',16],['17',17],['18',18],['19',19],['20',20],['21',21],['22',22],['23',23]
 		], @event.endtime.hour), 
	) %>
	:
	<%= select_tag('event_endMM',
 		options_for_select([
 			['00',0],['15',15],['30',30],['45',45]
 		], @event.endtime.min), 
	) %>
	
</p>

<p>
<!--
  <%=f.label :title %>
-->
  time
	<%= select_tag('event_time',
 	options_for_select([['7.75','7.75'],['8.75','8.75'],['9.75','9.75']], @event.time), 
  ) %>
</p>

<!--
<p>
  <%=f.label :starttime, 'Start Time' %>
  <br/>
  <%=f.datetime_select :starttime %>
</p>
<p>
  <%=f.label :endtime, 'End Time' %>
  <br/>
  <%=f.datetime_select :endtime %>
</p>
-->

<%=f.hidden_field :starttime, :value => @event.starttime %>
<%=f.hidden_field :endtime, :value => @event.endtime %>

<%=f.hidden_field :id, :value => @event.id%>
<%=f.hidden_field :commit_button, :value => ""%>


<p>
  <%=f.submit "update", :onclick => "document.getElementById('event_commit_button').value = this.value" %>
  <%=f.submit "delete", :onclick => "document.getElementById('event_commit_button').value = this.value" %>
      
  <span id = "updating_events" style = "display:none;">Updating, Please wait...</span>
</p>
<%end %>